<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/row_day"
  android:layout_width="match_parent"
  android:paddingVertical="10dp"
  android:gravity="center_vertical"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/row_day_day"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:text="Wednesday" />

  <ImageView
    android:id="@+id/row_day_icon"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@drawable/sun" />

  <TextView
    android:id="@+id/row_day_min_temp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:textColor="#aaaaaa"
    android:layout_gravity="center"
    android:text="10" />

  <RelativeLayout
    android:layout_width="100dp"
    android:layout_height="5dp"
    android:layout_weight="1">

    <View
      android:id="@+id/row_day_range_bg"
      android:layout_alignParentStart="true"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/weather_range_bg" />

    <View
      android:id="@+id/row_day_range_fg"
      android:layout_alignParentStart="true"
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:background="@drawable/weather_range_fg" />
  </RelativeLayout>

  <TextView
    android:id="@+id/row_day_max_temp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:layout_gravity="center"
    android:text="21" />

</TableRow>